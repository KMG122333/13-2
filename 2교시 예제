#include <stdio.h>

int main() {
    int num;

    // 웹버전 OnlineGDB에서는 현재 폴더(".") 사용
    const char *folderPath = ".";

    char filename[300];
    FILE *fp;

    printf("파일을 입력하세요: (2~19까지의 정수)\n");
    printf("입력: ");

    if (scanf("%d", &num) != 1) {
        printf("잘못된 파일명을 입력하셨습니다.\n");
        return 0;
    }

    if (num < 2 || num > 19) {
        printf("잘못된 파일명을 입력하셨습니다.\n");
        return 0;
    }

    // 파일명과 위치 조합
    sprintf(filename,
        "%s/혼자 공부하는 C언어(개정판)_CHAPTER%02d.txt",
        folderPath, num);

    // 파일 열기
    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("파일을 열 수 없습니다. 파일 또는 경로를 확인하세요.\n");
        return 0;
    }

    // 출력
    printf("\n===== 파일 정보 =====\n");
    printf("컴파일 날짜와 시간: %s %s\n", __DATE__, __TIME__);
    printf("파일 위치: %s\n", filename);   // ← 경로 포함
    printf("함수명: fopen\n");             // ← 파일 열 때 사용한 함수
    printf("파일번호: %d\n", num);
    printf("=====================\n");

    fclose(fp);
    return 0;
}

