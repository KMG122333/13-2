#include <stdio.h>

int main() {
    int num;

    // 폴더 경로 (원하는 폴더 경로 직접 수정)
    const char *folderPath = "C:/Users/yoonw/Desktop/new";

    char filename[300];
    FILE *fp;

    printf("파일을 입력하세요: (2~19까지의 정수)\n");
    printf("입력: ");

    // 정수 입력 검사
    if (scanf("%d", &num) != 1) {
        printf("잘못된 파일명을 입력하셨습니다.\n");
        return 0;
    }

    // 범위 검사
    if (num < 2 || num > 19) {
        printf("잘못된 파일명을 입력하셨습니다.\n");
        return 0;
    }

    // 파일명 조합
    // CHAPTER02, CHAPTER03 ... CHAPTER19 형태
    sprintf(filename,
        "%s/혼자 공부하는 C언어(개정판)_CHAPTER%02d.txt",
        folderPath, num);

    // 파일 열기
    fp = fopen(filename, "r");
    if (fp == NULL) {
        printf("파일을 열 수 없습니다. 파일 또는 경로를 확인하세요.\n");
        return 0;
    }

    printf("\n===== 파일 정보 =====\n");
    printf("컴파일 날짜와 시간: %s %s\n", __DATE__, __TIME__);
    printf("파일명: %s\n", filename);
    printf("함수명: %s\n", __func__);
    printf("파일번호: %d\n", num);
    printf("=====================\n");

    fclose(fp);
    return 0;
}
